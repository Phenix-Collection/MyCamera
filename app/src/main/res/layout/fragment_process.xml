    <include layout="@layout/include_top_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <include layout="@layout/include_menu"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="作业过程"
                android:paddingLeft="@dimen/excel_left_padding"
                android:paddingTop="18dp"
                android:paddingBottom="16dp"
                style="@style/text_style_white"/>

            <TextView
                android:id="@+id/standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="密封工作票"
                android:paddingLeft="@dimen/excel_left_padding"
                style="@style/text_style_white"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <Button
                    android:id="@+id/executed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_button_bg"
                    style="@style/text_style_white_bold"
                    android:textSize="14sp"
                    android:text="@string/executed"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/unexecuted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_bg"
                    style="@style/text_style_white_bold"
                    android:textSize="14sp"
                    android:text="@string/unexecuted"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/previousStepBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_bg"
                    style="@style/text_style_white_bold"
                    android:textSize="14sp"
                    android:text="@string/pre_operation"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/nextStepBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_bg"
                    style="@style/text_style_white_bold"
                    android:textSize="14sp"
                    android:text="@string/next_operation"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/" />

                <TextView
                    android:id="@+id/total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
